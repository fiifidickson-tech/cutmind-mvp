{
  "version": "0.2",
  "default_unit": "cm",

  "garment_type": {
    "tshirt": {
      "aliases": ["t-shirt", "tee", "tee shirt", "shirt"],
      "default_pattern_id": "tshirt"
    },
    "long_sleeve": {
      "aliases": ["long sleeve", "long-sleeve tee", "long-sleeve shirt"],
      "default_pattern_id": "long_sleeve"
    },
    "crop_top": {
      "aliases": ["crop top", "cropped tee", "cropped shirt"],
      "default_pattern_id": "crop_top"
    }
  },

  "operations": {
    "crop_hem": {
      "synonyms": [
        "crop the hem",
        "crop the shirt",
        "shorten the hem",
        "shorten the shirt",
        "make it shorter",
        "make the shirt cropped"
      ],
      "unit": "cm",
      "value_required": true
    },

    "extend_hem": {
      "synonyms": [
        "extend the hem",
        "extend the shirt",
        "lengthen the shirt",
        "make it longer",
        "add length to the body"
      ],
      "unit": "cm",
      "value_required": true
    },

    "widen_sleeve": {
      "synonyms": [
        "widen the sleeves",
        "make the sleeves wider",
        "make the sleeves a bit wider",
        "loosen the sleeves",
        "more room in the sleeves",
        "oversized sleeves"
      ],
      "unit": "cm",
      "value_required": true
    },

    "narrow_sleeve": {
      "synonyms": [
        "narrow the sleeves",
        "make the sleeves slimmer",
        "tighten the sleeves",
        "more fitted sleeves"
      ],
      "unit": "cm",
      "value_required": true
    },

    "add_ease_body": {
      "synonyms": [
        "add ease",
        "make it looser",
        "more relaxed fit",
        "more oversized",
        "oversized",
        "very oversized",
        "more room around the chest",
        "more room around the body"
      ],
      "unit": "cm",
      "value_required": true
    },

    "add_ease_sleeve": {
      "synonyms": [
        "add ease to the sleeves",
        "loosen the sleeves a bit",
        "more room in the sleeves"
      ],
      "unit": "cm",
      "value_required": true
    },

    "raise_neckline": {
      "synonyms": [
        "raise the neckline",
        "make the neckline higher"
      ],
      "unit": "cm",
      "value_required": true
    },

    "lower_neckline": {
      "synonyms": [
        "lower the neckline",
        "deepen the neckline",
        "make the neckline lower"
      ],
      "unit": "cm",
      "value_required": true
    }
  },

  "intensity_keywords": {
    "small": 2,
    "slight": 2,
    "a bit": 2,
    "a little": 2,
    "moderate": 3,
    "regular": 3,
    "noticeable": 4,
    "oversized": 5,
    "very oversized": 7
  },

  "fit_keywords": {
    "oversized": {
      "operation": "add_ease_body",
      "default_cm": 5
    },
    "relaxed": {
      "operation": "add_ease_body",
      "default_cm": 3
    },
    "fitted": {
      "operation": "add_ease_body",
      "default_cm": -3
    },
    "cropped": {
      "operation": "crop_hem",
      "default_cm": 5
    }
  },

  "examples": [
    {
      "prompt": "shorten the shirt by 3 cm and make the sleeves a bit wider",
      "interpreted": {
        "operations": [
          { "operation": "crop_hem", "value_cm": 3 },
          { "operation": "widen_sleeve", "value_cm": 3 }
        ]
      }
    },
    {
      "prompt": "make it very oversized",
      "interpreted": {
        "operations": [
          { "operation": "add_ease_body", "value_cm": 7 }
        ]
      }
    },
    {
      "prompt": "lower the neckline by 2 cm",
      "interpreted": {
        "operations": [
          { "operation": "lower_neckline", "value_cm": 2 }
        ]
      }
    }
  ]
}
