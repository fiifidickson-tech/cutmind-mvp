{
  "version": "0.1",
  "default_unit": "cm",

  "garment_type": {
    "tshirt": {
      "aliases": ["t-shirt", "tee", "tee shirt", "shirt"],
      "default_pattern_id": "tshirt_block_v1"
    }
  },

  "operations": {
    "crop_hem": {
      "synonyms": [
        "crop the hem",
        "crop the shirt",
        "shorten the hem",
        "shorten the shirt",
        "make it shorter",
        "make the shirt cropped"
      ],
      "targets": ["body_length"],
      "default_direction": "shorten",
      "unit": "cm",
      "value_required": true
    },

    "extend_body": {
      "synonyms": [
        "extend the hem",
        "extend the shirt",
        "lengthen the shirt",
        "make it longer",
        "add length to the body"
      ],
      "targets": ["body_length"],
      "default_direction": "lengthen",
      "unit": "cm",
      "value_required": true
    },

    "widen_sleeve": {
      "synonyms": [
        "widen the sleeves",
        "make the sleeves wider",
        "loosen the sleeves",
        "more room in the sleeves",
        "oversized sleeves"
      ],
      "targets": ["sleeve_width"],
      "default_direction": "widen",
      "unit": "cm",
      "value_required": true
    },

    "narrow_sleeve": {
      "synonyms": [
        "narrow the sleeves",
        "make the sleeves slimmer",
        "tighten the sleeves",
        "more fitted sleeves"
      ],
      "targets": ["sleeve_width"],
      "default_direction": "narrow",
      "unit": "cm",
      "value_required": true
    },

    "add_ease": {
      "synonyms": [
        "add ease",
        "make it looser",
        "more relaxed fit",
        "more oversized",
        "more room around the chest",
        "more room around the body"
      ],
      "targets": ["chest_width", "body_width"],
      "default_direction": "widen",
      "unit": "cm",
      "value_required": true
    },

    "remove_ease": {
      "synonyms": [
        "remove ease",
        "make it more fitted",
        "make it tighter",
        "slim fit",
        "take out extra room"
      ],
      "targets": ["chest_width", "body_width"],
      "default_direction": "narrow",
      "unit": "cm",
      "value_required": true
    },

    "adjust_neckline_depth": {
      "synonyms": [
        "lower the neckline",
        "raise the neckline",
        "deepen the neckline",
        "make the neckline higher",
        "change the neckline depth"
      ],
      "targets": ["neckline_depth"],
      "unit": "cm",
      "value_required": true
    }
  },

  "intensity_keywords": {
    "small": 2,
    "slight": 2,
    "a bit": 2,
    "a little": 2,
    "moderate": 3,
    "regular": 3,
    "noticeable": 4,
    "oversized": 5,
    "very oversized": 7
  },

  "fit_keywords": {
    "oversized": {
      "operations": ["add_ease"],
      "default_values": {
        "chest_width": 5,
        "body_width": 5
      }
    },
    "relaxed": {
      "operations": ["add_ease"],
      "default_values": {
        "chest_width": 3,
        "body_width": 3
      }
    },
    "fitted": {
      "operations": ["remove_ease"],
      "default_values": {
        "chest_width": 3,
        "body_width": 3
      }
    },
    "cropped": {
      "operations": ["crop_hem"],
      "default_values": {
        "body_length": 5
      }
    }
  },

  "examples": [
    {
      "prompt": "make it a cropped oversized tee",
      "interpreted": {
        "garment_type": "tshirt",
        "operations": [
          {
            "operation": "crop_hem",
            "value_cm": 5
          },
          {
            "operation": "add_ease",
            "value_cm": 5
          }
        ]
      }
    },
    {
      "prompt": "shorten the shirt by 3 cm and make the sleeves a bit wider",
      "interpreted": {
        "garment_type": "tshirt",
        "operations": [
          {
            "operation": "crop_hem",
            "value_cm": 3
          },
          {
            "operation": "widen_sleeve",
            "value_cm": 2
          }
        ]
      }
    }
  ]
}
